modules = ["python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["glibcLocales"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Penalty Tracker Setup"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "penalty_tracker"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Streamlit App"

[[workflows.workflow]]
name = "Penalty Tracker Setup"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install openpyxl>=3.1 && python build_strafenlog.py && python export_csv.py"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "penalty_tracker"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install openpyxl>=3.1 && python build_strafenlog.py && python export_csv.py"

[[workflows.workflow]]
name = "Streamlit App"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run streamlit_app.py --server.port 5000 --server.address 0.0.0.0 --server.fileWatcherType none --server.headless true"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "static"
publicDir = "public"
